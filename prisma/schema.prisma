generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === BẢNG MỚI: Danh mục sản phẩm ===
model Category {
  id       Int       @id @default(autoincrement())
  name     String // VD: "Bóng đèn", "Dây điện", "Ống nước"
  slug     String    @unique
  products Product[]
}

model User {
  id        Int      @id @default(autoincrement())
  phone     String   @unique
  password  String
  name      String?
  email     String?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  orders    Order[]

  reviews Review[]
}

model Product {
  id          Int       @id @default(autoincrement())
  categoryId  Int? // Thuộc danh mục nào
  category    Category? @relation(fields: [categoryId], references: [id])
  name        String // Tên chung: "Bóng đèn búp Hoàng Hải"
  slug        String    @unique
  description String?
  unit        String    @default("Cái") // Quan trọng: Đơn vị tính (Cuộn, Cây, Cái, Hộp)
  isVisible   Boolean   @default(true)
  createdAt   DateTime  @default(now())

  variants ProductVariant[]
  images   ProductImage[]

  reviews Review[]
}

model ProductVariant {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  name      String // Tên biến thể: "20W - Ánh sáng trắng" hoặc "Đỏ - 1.5mm"
  sku       String  @unique // Mã kho
  price     Int // Giá bán 
  stock     Int     @default(0) // Tồn kho

  orderItems OrderItem[]
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int      // Số sao (1-5)
  comment   String?  // Nội dung bình luận
  createdAt DateTime @default(now())
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
}

model Order {
  id           Int         @id @default(autoincrement())
  orderCode    BigInt?     @unique // THÊM MỚI: Mã dùng cho PayOS (Chống đoán ID)
  userId       Int         // SỬA LỖI 6: Bắt buộc không được null
  user         User        @relation(fields: [userId], references: [id])
  total        Int
  status       String      @default("PENDING")
  customerName String
  phone        String
  address      String
  trackingCode String?
  createdAt    DateTime    @default(now())
  items        OrderItem[]
}

model OrderItem {
  id        Int            @id @default(autoincrement())
  orderId   Int
  order     Order          @relation(fields: [orderId], references: [id])
  variantId Int
  variant   ProductVariant @relation(fields: [variantId], references: [id])
  quantity  Int
  price     Int
}
